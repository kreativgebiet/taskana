{
  "name": "taskana",
  "productName": "Taskana",
  "version": "1.0.0",
  "description": "Application wrapper for Asana web application",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "files": [
    "index.js",
    "index.html",
    "index.css"
  ],
  "dependencies": {
    "electron-debug": "^1.1.0",
    "electron-is-dev": "^0.1.2",
    "electron-updater": "^2.3.1"
  },
  "devDependencies": {
    "electron-builder": "^19.5.1",
    "electron-packager": "^8.7.1",
    "electron-prebuilt": "^1.4.13"
  },
  "build": {
    "files": [
      "**/*"
    ],
    "appId": "com.kreativgebiet.taskana",
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
